doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    link(rel='stylesheet' href='/css/loginRegistro.css')
    title gamerFes
  body
    main.container.mt-5
      .row.justify-content-center
        .col-md-6
          #titulo.text-center.mb-4
            h2 REGISTRAR
          form#formulario(action='/credenciales/registrar', method='POST')
            // Campo CSRF
            input(type='hidden' name='_csrf' value=csrf)

            // Campos del formulario
            .mb-3
              label(for='username', class='form-label') Nombre de usuario
              input#username.form-control(type='text' name='username' placeholder='Tu nombre de usuario' required)
              if errores && errores.some(error => error.param === 'username')
                .text-danger
                  each error in errores
                    if error.param === 'username'
                      p= error.msg

            .mb-3
              label(for='apellido_paterno', class='form-label') Apellido Paterno
              input#apellido_paterno.form-control(type='text' name='apellido_paterno' placeholder='Tu apellido paterno' required)
              if errores && errores.some(error => error.param === 'apellido_paterno')
                .text-danger
                  each error in errores
                    if error.param === 'apellido_paterno'
                      p= error.msg

            .mb-3
              label(for='apellido_materno', class='form-label') Apellido Materno
              input#apellido_materno.form-control(type='text' name='apellido_materno' placeholder='Tu apellido materno' required)
              if errores && errores.some(error => error.param === 'apellido_materno')
                .text-danger
                  each error in errores
                    if error.param === 'apellido_materno'
                      p= error.msg

            .mb-3
              label(for='telefonoUsuario', class='form-label') Teléfono
              input#telefonoUsuario.form-control(type='text' name='telefonoUsuario' placeholder='10 dígitos' maxlength='10' required)
              if errores && errores.some(error => error.param === 'telefonoUsuario')
                .text-danger
                  each error in errores
                    if error.param === 'telefonoUsuario'
                      p= error.msg

            .mb-3
              label(for='email', class='form-label') Correo Electrónico
              input#email.form-control(type='email' name='email' placeholder='Tu correo electrónico' required)
              if errores && errores.some(error => error.param === 'email')
                .text-danger
                  each error in errores
                    if error.param === 'email'
                      p= error.msg

            .mb-3
              label(for='passwd', class='form-label') Contraseña
              input#passwd.form-control(type='password' name='passwd' placeholder='Tu contraseña segura' required)
              if errores && errores.some(error => error.param === 'passwd')
                .text-danger
                  each error in errores
                    if error.param === 'passwd'
                      p= error.msg
            
            // Botón de envío
            .text-center
              button#enviar.btn.btn-outline-dark(type='submit') Enviar

    // Scripts de Bootstrap
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
