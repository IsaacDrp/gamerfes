doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    link(rel='stylesheet' href='/css/loginRegistro.css')
    title gamerFes
  body
    br
    main
      br
      #titulo
        p REGISTRAR
      form#formulario(action='/registrar', method='POST')
        .Baseinputs
          label(for='username') Nombre de usuario
          .entrada
            input#username(type='text' name='username' required)
        .Baseinputs
          label(for='apellido_paterno') Apellido Paterno
          .entrada
            input#apellido_paterno(type='text' name='apellido_paterno' required)
        .Baseinputs
          label(for='apellido_materno') Apellido Materno
          .entrada
            input#apellido_materno(type='text' name='apellido_materno' required)
        .Baseinputs
          label(for='telefonoUsuario') Teléfono
          .entrada
            input#telefonoUsuario(type='text' name='telefonoUsuario' maxlength='10' required)
        .Baseinputs
          label(for='email') Correo Electrónico
          .entrada
            input#email(type='email' name='email' required)
        .Baseinputs
          label(for='passwd') Contraseña
          .entrada
            input#passwd(type='password' name='passwd' required)
        #boton
          button#enviar.btn.btn-outline-dark(type='submit') Enviar
      br
    br
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
