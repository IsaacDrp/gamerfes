form#userForm(action="/usuarios" method="POST")
  .mb-3
    label(for="username" class="form-label") Nombre de Usuario
    input#username(type="text" name="username" class="form-control" required maxlength="50" placeholder="Ingrese su nombre de usuario")
  
  .mb-3
    label(for="apellido_paterno" class="form-label") Apellido Paterno
    input#apellido_paterno(type="text" name="apellido_paterno" class="form-control" required maxlength="50" placeholder="Ingrese su apellido paterno")
  
  .mb-3
    label(for="apellido_materno" class="form-label") Apellido Materno
    input#apellido_materno(type="text" name="apellido_materno" class="form-control" required maxlength="50" placeholder="Ingrese su apellido materno")
  
  .mb-3
    label(for="telefonoUsuario" class="form-label") Teléfono
    input#telefonoUsuario(type="text" name="telefonoUsuario" class="form-control" required maxlength="10" pattern="[0-9]{10}" placeholder="10 dígitos")
    small.text-muted Por ejemplo: 5512345678
  
  .mb-3
    label(for="email" class="form-label") Correo Electrónico
    input#email(type="email" name="email" class="form-control" required maxlength="255" placeholder="Ingrese su correo electrónico")
  
  .mb-3
    label(for="passwd" class="form-label") Contraseña
    input#passwd(type="password" name="passwd" class="form-control" required maxlength="255" placeholder="Ingrese su contraseña")
  
  .mb-3
    label(for="role_id" class="form-label") Rol de Usuario
    select#role_id(name="role_id" class="form-select")
      option(value="" selected disabled) Seleccione un rol
      option(value="1") Administrador
      option(value="2") Cliente
      option(value="3") Empleado
      //- Agrega más roles según tu aplicación
  
  .d-grid.gap-2.d-md-flex.justify-content-md-end
    button(type="submit" class="btn btn-primary btnFormu") Guardar
    button(type="reset" class="btn btn-secondary btnFormu") Limpiar
